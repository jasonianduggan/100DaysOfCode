rock = '''
    _______
---'   ____)
      (_____)
      (_____)
      (____)
---.__(___)
'''

paper = '''
    _______
---'   ____)____
          ______)
          _______)
         _______)
---.__________)
'''

scissors = '''
    _______
---'   ____)____
          ______)
       __________)
      (____)
---.__(___)
'''

#Write your code below this line ðŸ‘‡
import random

print("Welcome to Rock, Paper, Scissors!")
Choice = int(input("What do you choose? Type 1 for Rock, 2 for Paper, or 3 for Scissors. "))

Continue = 1

print("Your choice:")
if Choice == 1:
  print(rock)
elif Choice == 2:
  print(paper)
elif Choice == 3:
  print(scissors)
else:
  print("That is not a valid choice.")
  Continue = 0


if Continue == 0:
  print("Try again.")
else:
  Computer_Choice = random.randint(0,2)
  print("Computer choice:")
  if Computer_Choice == 0:
    print(rock)
  elif Computer_Choice == 1:
    print(paper)
  else:
    print(scissors)

if Continue == 0:
  print("Game over.")
elif Choice-1 == 0 and Computer_Choice == 2:
  print("You win!")
elif Choice-1 == Computer_Choice:
  print("Draw.")
elif Choice-1 > Computer_Choice:
  print("You win!")
elif Choice-1 < Computer_Choice:
  print("You lose.")
  
